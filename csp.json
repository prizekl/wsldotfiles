{
  "title": "csp",
  "rules": [
    {
      "description": "Tab",
      "manipulators": [
        {
          "type": "basic",
          "from": { "key_code": "keypad_period" },
          "to": [{ "key_code": "tab" }]
        }
      ]
    },

    {
      "description": "Command",
      "manipulators": [
        {
          "type": "basic",
          "from": { "key_code": "keypad_enter" },
          "to": [{ "key_code": "left_gui" }]
        }
      ]
    },

    {
      "description": "brushsize",
      "manipulators": [
        {
          "type": "basic",
          "from": { "key_code": "keypad_hyphen" },
          "to": [
            {
              "modifiers": ["left_gui"],
              "key_code": "left_option"
            }
          ]
        }
      ]
    },

    {
      "description": "colorpicker",
      "manipulators": [
        {
          "type": "basic",
          "from": { "key_code": "keypad_plus" },
          "to": [{ "key_code": "left_option" }]
        }
      ]
    },

    {
      "description": "Spacebar",
      "manipulators": [
        {
          "type": "basic",
          "from": { "key_code": "keypad_slash" },
          "to": [{ "key_code": "spacebar" }]
        }
      ]
    },

    {
      "description": "Shift",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "modifiers": { "optional": ["left_gui"] },
            "key_code": "keypad_0"
          },
          "to": [{ "key_code": "left_shift" }]
        }
      ]
    },

    {
      "description": "undo",
      "manipulators": [
        {
          "type": "basic",
          "from": { "key_code": "delete_or_backspace" },
          "to": [
            {
              "modifiers": ["left_gui"],
              "key_code": "z"
            }
          ]
        }
      ]
    },

    {
      "description": "redo",
      "manipulators": [
        {
          "type": "basic",
          "from": { "key_code": "equal_sign" },
          "to": [
            {
              "modifiers": ["left_gui"],
              "key_code": "y"
            }
          ]
        }
      ]
    },

    {
      "description": "b_brush",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "modifiers": { "optional": ["left_gui"] },
            "key_code": "keypad_9"
          },
          "to": [{ "key_code": "b" }]
        }
      ]
    },

    {
      "description": "p_pencil",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "modifiers": { "optional": ["left_gui"] },
            "key_code": "keypad_7"
          },
          "to": [{ "key_code": "p" }]
        }
      ]
    },

    {
      "description": "e_eraser",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "modifiers": { "optional": ["left_gui"] },
            "key_code": "keypad_6"
          },
          "to": [{ "key_code": "e" }]
        }
      ]
    },

    {
      "description": "lasso/polyline",
      "manipulators": [
        {
          "type": "basic",
          "from": { "key_code": "keypad_8" },
          "to": [{ "key_code": "m" }]
        }
      ]
    },

    {
      "description": "deselect",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "modifiers": { "mandatory": ["left_gui"] },
            "key_code": "keypad_8"
          },
          "to": [
            {
              "modifiers": ["left_gui"],
              "key_code": "d"
            }
          ]
        }
      ]
    },

    {
      "description": "newlayer",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "modifiers": { "optional": ["left_gui"] },
            "key_code": "keypad_5"
          },
          "to": [
            {
              "modifiers": ["left_gui", "left_shift"],
              "key_code": "n"
            }
          ]
        }
      ]
    },

    {
      "description": "layerabove",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "modifiers": { "mandatory": ["left_gui"] },
            "key_code": "keypad_hyphen"
          },
          "to": [
            {
              "modifiers": ["left_option"],
              "key_code": "close_bracket"
            }
          ]
        }
      ]
    },

    {
      "description": "layerbelow",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "modifiers": { "mandatory": ["left_gui"] },
            "key_code": "keypad_plus"
          },
          "to": [
            {
              "modifiers": ["left_option"],
              "key_code": "open_bracket"
            }
          ]
        }
      ]
    }

  ]
}
